{
  "name": "alex-erlandsson",
  "version": "1.1.0",
  "description": "This is the repository for https://alexerlandsson.com.",
  "main": "gulpfile.js",
  "scripts": {
    "sass": "sass ./scss/styles.scss ./docs/styles/styles.css --no-source-map --style compressed",
    "sass:watch": "sass --watch ./scss/*.scss ./compiled/styles.css",
    "prettier": "prettier --write .",
    "stylelint": "stylelint '**/*.scss'",
    "precommit-msg": "echo 'Pre-commit checks...\nDo not forget to compile the CSS.' && exit 0"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.1",
    "sass": "^1.43.4",
    "stylelint": "^16.3.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.1.0"
  },
  "pre-commit": [
    "precommit-msg"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:alexerlandsson/alex-erlandsson.git"
  },
  "author": "",
  "license": "MIT"
}
